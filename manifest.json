{
  "manifest_version": 3,
  "name": "AI Companion - Real-Time Assistant",
  "version": "1.0.0",
  "description": "Your intelligent companion that provides real-time assistance while browsing the web",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "http://localhost:11434/"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Companion Settings",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "32": "icons/icon32.jpg",
      "48": "icons/icon48.jpg",
      "128": "icons/icon128.jpg"
    }
  },
  
  "icons": {
    "16": "icons/icon16.jpg",
    "32": "icons/icon32.jpg",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  },
  
 "web_accessible_resources": [
  {
    "resources": [
      "images/its-peak-fiction.gif",
      "images/zoro.gif",
      "images/batman.gif",
      "images/morty.gif",
      "images/cheerful-girl.gif"
    ],
    "matches": ["<all_urls>"]
  }
]
}